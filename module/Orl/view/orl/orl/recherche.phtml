	$chaine = $Text;
	if(strlen($Text)>30){
		$chaine = substr($Text, 0, 30);
		$nb = strrpos($chaine, ' ');
		$chaine = substr($chaine, 0, $nb);
		$chaine .=' ...';
	}
	return $chaine;
}
